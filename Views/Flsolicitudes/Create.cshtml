@model GestionSolicitud.ViewModels.SolicitudViewModel

<div class="container mt-4">
    <h2>Nueva Solicitud</h2>
    <hr />

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="IdSolicitud" />

        <div class="row g-3">
            <!-- Tipo Solicitud -->
            <div class="col-md-6">
                <label asp-for="IdTipoSolicitud" class="form-label">Tipo de Solicitud</label>
                <select asp-for="IdTipoSolicitud" class="form-select" asp-items="Model.TiposSolicitud">
                    <option value="">-- Seleccionar --</option>
                </select>
                <span asp-validation-for="IdTipoSolicitud" class="text-danger"></span>
            </div>

            <!-- Área -->
            <div class="col-md-6">
                <label asp-for="IdArea" class="form-label">Área</label>
                <select asp-for="IdArea" class="form-select" asp-items="Model.Areas">
                    <option value="">-- Seleccionar --</option>
                </select>
                <span asp-validation-for="IdArea" class="text-danger"></span>
            </div>
@*
            <div class="col-md-6"></div>
                <label asp-for="Codigo" class="form-label">Producto</label>
                <select asp-for="Codigo" class="form-select" asp-items="Model.Productos">
                    <option value="">-- Seleccionar --</option>
                </select>
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
*@
@*
            <!-- Status -->
            <div class="col-md-6">
                <label asp-for="IdStatus" class="form-label">Estado</label>
                <select asp-for="IdStatus" class="form-select" asp-items="Model.Estados">
                    <option value="">-- Seleccionar --</option>
                </select>
                <span asp-validation-for="IdStatus" class="text-danger"></span>
            </div>
            

            <!-- DocNumERP -->
            <div class="col-md-6">
                <label asp-for="DocNumErp" class="form-label">Número Documento ERP</label>
                <input asp-for="DocNumErp" class="form-control" />
                <span asp-validation-for="DocNumErp" class="text-danger"></span>
            </div>
           *@ 

            <!-- Comentarios -->
            <div class="col-12">
                <label asp-for="Comentarios" class="form-label">Comentarios</label>
                <textarea asp-for="Comentarios" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
        </div>

        <!-- Botones -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Siguiente
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Validación del lado del cliente
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}